{
  "name": "simple-express-api",
  "version": "3.0.7",
  "description": "A simple Express RESTful API example using SQLite",
  "main": "server.js",
  "scripts": {
    "start": "nodemon app.js",
    "start:prod": "NODE_ENV=production node app.js",
    "dev": "NODE_ENV=development nodemon app.js",
    "prod": "NODE_ENV=production node app.js",
    "setup:dev": "node setup-env.js dev",
    "setup:prod": "node setup-env.js production",
    "setup": "node setup-env.js",
    "test:prod": "node test-production-config.js",
    "test": "mocha test/**/*.test.js --exit",
    "test:auth": "mocha test/auth.test.js --exit",
    "test:security": "mocha test/security/**/*.test.js --exit",
    "test:coverage": "nyc mocha test/**/*.test.js --exit",
    "lint": "echo 'Linting not configured yet'",
    "migrate": "node scripts/apply_migration.js",
    "db:migrate": "sqlite3 database.sqlite < migrations/2025-09-10_add_core_indexes.sql",
    "db:backup": "node scripts/backup-db.mjs",
    "db:reset": "node recreate-db.js",
    "db:recompute": "node scripts/recompute_balances.js"
  },
  "keywords": [],
  "author": "Richard",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.3",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "fast-fuzzy": "^1.12.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.0.3",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "validator": "^13.15.15",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "axios": "^1.6.7",
    "chai": "^4.3.10",
    "chai-http": "^5.1.2",
    "concurrently": "^9.1.2",
    "mocha": "^10.3.0",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0",
    "supertest": "^6.3.4"
  }
}
